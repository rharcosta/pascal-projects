Program media;
var nota1,nota2,media:real;
nome:string [30];
serie:string[3];
Begin
 writeln ('Este programa efetuara a media de um aluno');
 write('Informe o nome do aluno');
 readln(nome);
 write('Informe a serie do aluno');
 readln(serie);
 write ('Informe a primeira nota:');
 readln (nota1);
 write ('Informe a segunda nota:');
 readln (nota2);
 media:=(nota1+nota2)/2;
 writeln ('O(a) aluno(a):',nome,'da serie',obteve media:'media:2:2');
 
 End.
